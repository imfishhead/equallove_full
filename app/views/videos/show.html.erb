<%= render partial: "categories/partials/nav", locals: { id: @category.id, category: @category } %>
<section class="article-show">
  <div class="pop-up-box">
  	<h2><%= @video.title %></h2>
    <nav>
    	<div class="goback-btn">
    		<i class="fa fa-angle-left" aria-hidden="true"></i>回上一頁
    	</div>
    	<div class="category">
    		<%= @video.category.title %>
    	</div>
    	<div class="copy-btn" data-copy-link="">
    		複製連結
    	</div>
    </nav>
    <div class="pop-up-content">
	    <!--  yotuber box -->
	    <div class="youtube-box-main" style="margin-top: 30px;">
	      <div class="youtube-box-main-169">
	        <iframe src="https://www.youtube.com/embed/FUXMqninXK0" frameborder="0" allowfullscreen></iframe>
	      </div>
	    </div> 
			<!--  yotuber box END -->
			<p>
				<%= raw @video.content %>
			</p>
		</div>
  </div>
</section>
<style>
.youtube-box-main {
  position: relative;
  width: 95%;
  max-width: 950px;
  margin: auto;
}
.youtube-box-main-169 {
  padding-bottom: 53%; /*撐出16:9*/
}
.youtube-box-main iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: visible;
}
/* ----- youtuber-box END ----- */
</style>



